@{
    Layout = null;
}
<style>
    .k-grid > table > tbody > tr:hover,
    .k-grid-content > table > tbody > tr:hover {
        background: #ccc !important;
    }
</style>
<progressbar class="progress-striped active" value="dynamic"
             ng-show="loading"></progressbar>

<div class="header bg-light-blue-gradient">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="close()">
        &times; &nbsp;&nbsp;
    </button>
    <h3 class="akow-modal-popup-title">
        &nbsp;&nbsp; ค้นหา - ผู้ติดต่อลูกค้า (Customer Contacts)
    </h3>
</div>
<div class="modal-body col-xs-12 form-horizontal form-group-sm table-bordered" ng-init="init()">
    <div class="row no-gutter akow-row-top">
        <div class="col-md-4">
            <div class="editor-label" style="text-align:right;">
                <label for="CustomerName">ชื่อลูกค้า :</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="editor-field" style="text-align:left;">
                <input id="txtCustomerName" type="text" ng-disabled="true" ng-model="mcc_criteria_CustomerName" class="akow-form-control" />
            </div>
        </div>
    </div>
    <div class="row no-gutter akow-row-top">
        <div class="col-md-4">
            <div class="editor-label" style="text-align:right;">
                <label for="ContactName">ชื่อผู้ติดต่อ :</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="editor-field" style="text-align:left;">
                <input id="txtContactName" type="text" ng-model="mcc_criteria_ContactName" class="akow-form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="text-align:center; padding-top:1.0em">
            <button class="btn btn-primary" ng-click="getCustomerContactByCriteria()"><i class="fa fa-search"></i>&nbsp;Search</button>&nbsp;&nbsp;
            <button class="btn btn-primary" ng-click="close()"><i class="fa fa-sign-out"></i>&nbsp;Close</button>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12" style="text-align:center; padding-top:1.0em">
            <div id="gridLOVCustomerContact" kendo-grid="grid" k-on-change="selectRowItem()" k-options="mainGridOptions"></div>
        </div>
    </div>
</div>
<div class="modal-footer"></div>

