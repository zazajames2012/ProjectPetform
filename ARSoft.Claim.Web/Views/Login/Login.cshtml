@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MLayout_ForLogin.cshtml";
}

@{
    var flagOut = Request.Params["flagOut"];
    if (flagOut != null && flagOut == "1")
    {
        <script type="text/javascript"> window.location.href = "/"; </script>
    }
}

<input id="hdWebApiUrl" type="hidden" value="@Session["WebApiUrl"].ToString()" />
<input id="hdWebMvcUrl" type="hidden" value="@Session["WebMvcUrl"].ToString()" />
<input id="hdSAMWebApiUrl" type="hidden" value="@Session["SAMWebApiUrl"].ToString()" />
<input id="hdSAMWebMvcUrl" type="hidden" value="@Session["SAMWebMvcUrl"].ToString()" />
@*<input id="hdUserName" type="hidden" value="@Session["Username"].ToString()" />*@

<script src="@Url.Content("~/Scripts/jquery/akow.authentication.js")" type="text/javascript"></script>
<script src="~/Apps/Controllers/LoginController.js" type="text/javascript"></script>

<div class="form-box" id="login-box" ng-app="Authentication" ng-controller="LoginController" ng-init="initial()">
    <br /><br /><br />
    <div class="header bg-green-gradient">Claim Management System</div>
    @*<form id="frm_login" name="frm_login" method="post">*@
    <form method="post">
        <div class="body bg-gray">
            <div ng-show="loading" class="loading" style="text-align:left;"><img src="~/Images/loading2.gif" width="30" height="30"/>&nbsp;&nbsp;&nbsp;Please wait while checking...</div>
            <div id="divMessage" style="text-align:justify; vertical-align:top; color:red;"></div>
            <div class="form-group">
                @*<input type="text" name="u_username" id="u_username" class="form-control" placeholder="User ID" required />*@
                <input type="text" name="u_username" id="u_username" class="form-control" placeholder="User ID" />
            </div>
            <div class="form-group">
                @*<input type="password" name="u_pwd" id="u_pwd" class="form-control" placeholder="Password" required />*@
                <input type="password" name="u_pwd" id="u_pwd" class="form-control" placeholder="Password" />
            </div>
            <div class="form-group">
                <input type="checkbox" name="remember_me" id="remember_me" /> Remember Me
                @Html.Partial("~/Views/Shared/_AkowAuthen.cshtml")
                <div class="row">
                    <div class="col-sm-12">
                        &nbsp;
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label style="color:#00a65a">@ViewBag.WebVersion</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label style="color:#00a65a">@ViewBag.ApiVersion</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <label style="color:#00a65a">@ViewBag.BizVersion</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            @Html.AntiForgeryToken()
            <button type="submit" id="btn_signin" name="btn_signin" ng-click="signIn()" class="btn bg-blues-gradient btn-block">Sign In</button>
        </div>

    </form>
    @*</form>*@
</div>
