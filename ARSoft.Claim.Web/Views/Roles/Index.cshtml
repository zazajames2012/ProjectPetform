@{
    ViewBag.Title = "System Role";
    Layout = "~/Views/Shared/AdminLTEV2_M.cshtml";
}

<script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js" type="text/javascript"></script>
<script src="~/Scripts/kendo/2014.2.716/kendo.all.min.js" type="text/javascript"></script>
<script src="@Url.Content("~/Apps/Controllers/RolesController.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Apps/Modules/ConstantConfig.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Apps/Modules/EnumHelper.js")" type="text/javascript"></script>

<div class="mainT-Table" ng-app="Roles" ng-controller="RolesController" ng-init="initial()">
    <div>
        <!-- Page Heading -->
        <div class="row" style="padding-top:0.5em">
            <div class="col-lg-12">
                <div class="akow-header-blank"></div>
                @{ IHtmlString str = new HtmlString(@Session["SearchNavTitle"].ToString()); @Html.Raw(str) }
                <div class="akow-header-blank"></div>
                <table class="table demo" data-filter="#filter" data-filter-text-only="true" style="width:100%;border: 0px solid #ddd;">
                    <tr>
                        <td>
                            <!-- Criteria -->
                            <table id="criteriaBGtable" style="width:100%;border: 1px solid #ddd; background-color:white;">
                                <tr>
                                    <td>
                                        <div>
                                            <table id="CriteriaTable" style="width:100%;border: 1px solid #ddd;">
                                                <tr>
                                                    <td style="text-align:center">
                                                        <br />

                                                        <div class="row no-gutter" style="padding-top:0.5em">
                                                            <div class="col-md-4 col-md-offset-1">
                                                                <div class="editor-label" style="text-align:right;">
                                                                    <label id="lblRoleName" translate>Role Name : </label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="editor-field" style="text-align:left;">
                                                                    <input id="txtSearchName" maxlength="10" type="text" ng-model="searchName" class="akow-control-textbox" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row no-gutter" style="padding-top:0.5em">
                                                            <div class="col-md-4 col-md-offset-1">
                                                                <div class="editor-label" style="text-align:right;">
                                                                    <label id="lblRoleDescription" translate>Role Description : </label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="editor-field" style="text-align:left;">
                                                                    <input id="txtSearchDescription" maxlength="10" type="text" ng-model="searchDescription" class="akow-control-textbox" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="row" style="text-align:center;padding-top:0.5em;">
                                                            <button class="btn btn-primary" ng-click="search()"><i class="fa fa-search" translate></i>&nbsp;Search</button>&nbsp;
                                                            <br />
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>&nbsp;</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                <button class="btn btn-primary akow-addbutton" ng-click="add()" translate><i class="glyphicon glyphicon-plus-sign"></i>&nbsp;Add</button><br />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div id="mainGrid" kendo-grid="grid" k-options="mainGridOptionsRole"></div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>