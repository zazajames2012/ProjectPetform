@{
    Layout = null;
}

<progressbar class="progress-striped active" value="dynamic"
             ng-show="loading"></progressbar>

<div class="mainT-Table">
    <div style="width:100%;">
        <div class="modal-header" style="border-bottom: 1px solid #e5e5e5;  background: #e5e5e5;">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="Close()">
                &times;
            </button>
            <h4 class="akow-modal-title">@Session["MenuName"] <i class="fa fa-fw fa-chevron-right"></i> แก้ไขผู้ติดต่อ</h4>
        </div>
        <div class="modal-body">
            <table id="EditSupplierContactTable" class="table demo" style="width:100%; border: 0px solid #ddd;">
                <tr>
                    <td>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_edit_TitleName">คำนำหน้าชื่อ : </label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_TitleName" maxlength="20" type="text" ng-model="msc_edit_TitleName" class="akow-control-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <span style="color:red;">* </span><label id="lbl_msc_edit_FirstName">ชื่อ : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_FirstName" maxlength="128" type="text" ng-model="msc_edit_FirstName" class="akow-control-textbox akow-require-field" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <span style="color:red;">* </span><label id="lbl_msc_edit_LastName">สกุล : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_LastName" maxlength="128" type="text" ng-model="msc_edit_LastName" class="akow-control-textbox akow-require-field" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <span style="color:red;">* </span><label id="lbl_msc_edit_PhoneContact">โทรศัพท์ : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_PhoneContact" kendo-masked-text-box k-mask="'0-0000-0000'" maxlength="20" type="text" ng-model="msc_edit_PhoneContact" class="akow-control-masked-textbox akow-require-field" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_SupplierName">อีเมล์ : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_EmailContact" maxlength="256" type="email" ng-model="msc_edit_EmailContact" class="akow-control-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <span style="color:red;">* </span><label id="lbl_msc_edit_ContactType">ผู้ติดต่อ : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input type="radio" name="rbtEditContactType" ng-model="msc_edit_TypeID" value="1" id="rbtEditContactTypeDirect" /> ติดต่อโดยตรง &nbsp;&nbsp;&nbsp;&nbsp;
                                    <input type="radio" name="rbtEditContactType" ng-model="msc_edit_TypeID" value="2" id="rbtEditContactTypeIndirect" /> ผู้ติดต่อ อื่นๆ
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_edit_PhoneOtherOne">โทรศัพท์อื่น (1) : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_PhoneOtherOne" kendo-masked-text-box k-mask="'0-0000-0000'" maxlength="20" type="text" ng-model="msc_edit_PhoneOtherOne" class="akow-control-masked-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_Phone">โทรศัพท์อื่น (2) : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_PhoneOtherTwo" kendo-masked-text-box k-mask="'0-0000-0000'" maxlength="20" type="text" ng-model="msc_edit_PhoneOtherTwo" class="akow-control-masked-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_Phone">โทรศัพท์อื่น (3) : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input id="txt_msc_edit_PhoneOtheThree" kendo-masked-text-box k-mask="'0-0000-0000'" maxlength="20" type="text" ng-model="msc_edit_PhoneOtheThree" class="akow-control-masked-textbox" />
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_Remark">หมายเหตุ : </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="editor-field" style="text-align:left;">
                                    <textarea name="txt_msc_edit_Remark" maxlength="256" id="txt_msc_edit_Remark" style="resize:none;" class="akow-control-textbox" ng-model="msc_edit_Remark" cols="100" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutter" style="padding-top:0.5em">
                            <div class="col-md-3">
                                <div style="text-align:right;">
                                    <label id="lbl_msc_Status">สถานะ : </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="editor-field" style="text-align:left;">
                                    <input type="radio" name="rbtEditStatus" ng-checked="true" ng-model="msc_edit_Status" value="1" id="rbtActive" /> ใช้งาน &nbsp;&nbsp;&nbsp;&nbsp;
                                    <input type="radio" name="rbtEditStatus" ng-model="msc_edit_Status" value="0" id="rbtInActive" /> ไม่ใช้งาน
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="modal-footer" style="text-align:center;">
            <button class="btn btn-primary akow-savebutton" ng-click="editSupplierContact()"><i class="fa fa-floppy-o"></i>&nbsp;Save</button>
            <button class="btn btn-primary" ng-click="Close()"><i class="fa fa-times-circle"></i>&nbsp;Cancel</button>
        </div>
    </div>
</div>


