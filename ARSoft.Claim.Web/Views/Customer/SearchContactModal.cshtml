@{
    Layout = null;
}

<progressbar class="progress-striped active" value="dynamic"
             ng-show="loading"></progressbar>
<div class="modal-header">
    <h3 class="modal-title">
        Search Employee
    </h3>
</div>
<div class="modal-body col-xs-12 form-horizontal form-group-sm table-bordered" ng-init="init()">
    <div class="col-xs-12">
        <form>

            <div class="row">
                <div class="col-xs-4">
                    <label for="CustomerName">CustomerName</label>
                </div>
                <div class="col-xs-6">
                    {{model.CustomerName}}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <label for="ContactName">ContactName</label>
                </div>
                <div class="col-xs-6">
                    <input type="text" class="form-control" ng-model="model.ContactName" />
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button class="btn btn-default" ng-click="search()">Search</button>
                    <button class="btn btn-default" ng-click="clear()">Close</button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div kendo-grid="grid" k-options="mainGridOptions"></div>
                </div>
            </div>
        </form>
</div>
</div>
<div class="modal-footer"></div>

