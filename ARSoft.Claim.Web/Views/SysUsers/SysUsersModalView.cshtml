@{
    Layout = null;
}

<div class="mainT-Table" ng-init="initial()">
    <div class="modal-header" style="border-bottom: 1px solid #e5e5e5;  background: #e5e5e5;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="Close()">
            &times;
        </button>
        @{ IHtmlString str = new HtmlString(@Session["ViewNavTitle"].ToString()); @Html.Raw(str) }
    </div>
    <div class="modal-body">
        <div style="padding-bottom: 10px;">
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewUsername" class="col-sm-4 control-label text-right"><span style="color:red;">* </span>Username : </label>
                    <div class="col-sm-5">
                        <input type="text" id="viewUsername" name="viewUsername" ng-model="viewUsername" class="akow-control-textbox-disabled akow-require-field" title="Username">
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewPassword" class="col-sm-4 control-label text-right"><span style="color:red;">* </span>Password : </label>
                    <div class="col-sm-5">
                        <input type="password" id="viewPassword" name="viewPassword" class="akow-control-textbox-disabled akow-require-field" title="Password">
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewConfirmPassword" class="col-sm-4 control-label text-right"><span style="color:red;">* </span>Confirm Password : </label>
                    <div class="col-sm-5">
                        <input type="password" id="viewConfirmPassword" name="viewConfirmPassword" class="akow-control-textbox-disabled akow-require-field" title="Confirm Password">
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewDisplayName" class="col-sm-4 control-label text-right"><span style="color:red;">* </span>Display Name : </label>
                    <div class="col-sm-5">
                        <input type="text" id="viewDisplayName" name="viewDisplayName" ng-model="viewDisplayName" class="akow-control-textbox-disabled akow-require-field" title="Display Name">
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewEmployee" class="col-sm-4 control-label text-right">Employee : </label>
                    <div class="col-sm-5">
                        <input type="text" class="akow-control-textbox-disabled" ng-model="viewEMP_NAME" />
                    </div>
                    <div class="col-sm-1">
                        <div class="input-group-btn" ng-click="Popup()">
                            <button class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewEmail" class="col-sm-4 control-label text-right"><span style="color:red;">* </span>Email : </label>
                    <div class="col-sm-5">
                        <input type="text" id="viewEmail" name="addEmail" class="akow-control-textbox-disabled akow-require-field" title="Email" ng-model="viewEmail">
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px;">
                <div class="form-group">
                    <label for="viewStatus" class="col-sm-4 control-label text-right"><span style="color:red;">* </span>Status : </label>
                    <div class="col-sm-5">
                        <label class="radio-inline">
                            <input name="rbtViewStatusGroup" ng-model="viewStatus" id="rbtViewStatus1" type="radio" value="1">Active
                        </label>
                        <label class="radio-inline">
                            <input name="rbtViewStatusGroup" ng-model="viewStatus" id="rbtViewStatus2" type="radio" value="0">Inactive
                        </label>
                    </div>
                </div>
            </div>
            <div class="row no-gutter" style="padding-top: 10px; padding-left: 100px; padding-right: 100px; ">
                <div class="col-sm-12 center-block">
                    <fieldset>
                        <label class="control-label text-right">Role : </label>
                        <table>
                            @{
                                int iTotal = ViewBag.RoleName.Count <= 0 ? 0 : ViewBag.RoleName.Count - 1;
                                for (int i = 0; i <= (iTotal / 4); i++)
                                {
                                    <tr>
                                        @for (int j = 0; j < 4; j++)
                                        {
                                            if ((i * 4) + j < ViewBag.RoleName.Count)
                                            {
                                                <td width="200">
                                                    <input type="checkbox" class="chkViewRoleName" name="chkViewRoleName_@((i * 4) + j)" value="@ViewBag.RoleName[(i * 4) + j].Value" />@ViewBag.RoleName[(i * 4) + j].Text
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            }
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="text-align:center">
        <button class="btn btn-primary center-block" ng-click="Close()"><i class="fa fa-sign-out"></i>&nbsp;Close</button>
    </div>
</div>