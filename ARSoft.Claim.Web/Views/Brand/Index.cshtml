@{
    ViewBag.Title = "ข้อมูลยี่ห้อสินค้า (Brand)";
    Layout = "~/Views/Shared/AdminLTEV2_M.cshtml";
}

<link href="~/Content/kendo/2014.2.716/kendo.common-bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/kendo/2014.2.716/kendo.bootstrap.min.css" rel="stylesheet" type="text/css" />

<script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
<script src="~/Scripts/kendo/2014.2.716/kendo.all.min.js" type="text/javascript"></script>

<script src="@Url.Content("~/Apps/Controllers/BrandController.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Apps/Modules/ConstantConfig.js")" type="text/javascript"></script>
@*<script src="@Url.Content("~/Apps/Popup/ConstantConfig.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Apps/Popup/SearchModelModalController.js")" type="text/javascript"></script>
<style>
    .app-modal-window-Brand .modal-dialog {
        /*width: 2000px;*/
        width: 80%;
    }

    .app-modal-window-edit-Brand .modal-dialog {
        width: 85%;
    }
</style>

<div class="mainT-Table" ng-app="Brand" ng-controller="BrandController" ng-init="initial()">
    <div>
        <!-- Page Heading -->
        <div class="row" style="padding-top:0.5em">
            <div class="col-lg-12">
                <div class="akow-header-blank"></div>
                @{ IHtmlString str = new HtmlString(@Session["SearchNavTitle"].ToString()); @Html.Raw(str) }
                <div class="akow-header-blank"></div>
                <table class="table demo" data-filter="#filter" data-filter-text-only="true" style="width:100%;border: 0px solid #ddd;">
                    <tr>
                        <td>
                            <!-- Criteria -->
                            <table id="criteriaBGtable" style="width:100%;border: 1px solid #ddd; background-color:white;">
                                <tr>
                                    <td>
                                        <div>
                                            <table id="CriteriaTable" style="width:100%;border: 1px solid #ddd;">
                                                <tr>
                                                    <td>
                                                        <br />

                                                        <div class="row no-gutter" style="padding-top:0.5em">
                                                            <div class="col-md-4 col-md-offset-1">
                                                                <div class="editor-label" style="text-align:right;">
                                                                    <label id="lblBrandName">ชื่อยี่ห้อสินค้า : </label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <div class="editor-field" style="text-align:left;">
                                                                    <input id="txtBrandname" maxlength="128" type="text" ng-model="searchBrandName" class="akow-control-textbox" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row no-gutter" style="padding-top:0.5em">
                                                            <div class="col-md-4 col-md-offset-1">
                                                                <div class="editor-label" style="text-align:right;">
                                                                    <label id="lblBrandType">สถานะ : </label>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="editor-field" style="text-align:left;">
                                                                    <input type="checkbox" ng-model="searchIsAvtive" id="chkActive" name="chkActive" ng-true-value="1" ng-false-value="0" />&nbsp;ใช้งาน &nbsp;&nbsp;&nbsp;
                                                                    <input type="checkbox" ng-model="searchIsInactive" id="chkInActive" name="chkInActive" ng-true-value="1" ng-false-value="0" />&nbsp;ไม่ใช้งาน &nbsp;&nbsp;&nbsp;
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row" style="text-align:center;padding-top:0.5em;">
                                                            <button class="btn btn-primary" ng-click="getBrandByCriteria()"><i class="fa fa-search"></i>&nbsp;Search</button>&nbsp;
                                                            <br />
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>&nbsp;</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div>
                                @*<button class="btn btn-success akow-addbutton" ng-click="add()"><i class="glyphicon glyphicon-plus-sign"></i>&nbsp;Add</button><br />*@
                                <button class="btn btn-primary akow-loading akow-addbutton" ng-click="add()"><i class="glyphicon glyphicon-plus-sign"></i>&nbsp;Add</button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div id="mainGrid" kendo-grid="grid" k-options="mainGridOptionsBrand"></div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>