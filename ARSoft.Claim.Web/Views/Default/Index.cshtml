@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/AdminLTEV2_M.cshtml";
}



<section class="content-header">
    <h1 id="head" class="svf-header-title" translate>
        Home
    </h1>
</section>

<section class="content">
    <div class="row" style="border: 1px solid #ddd; background-color:white;">
        <div class="col-md-12">
            <h2>Welcome to Claim Management System.</h2>
        </div>
        @*<div class="col-md-12">
            Project management is the discipline of initiating, planning, executing, controlling, and closing the work of a team to achieve specific goals and meet specific success criteria at the specified time.
        </div>*@
        @*<div class="col-md-6">
                <img src="~/Images/project management.png" alt="" style="margin: 46px; width: 900px;" />
            </div>*@

        <div class="col-md-12" style="height: 400px;">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom: 50px; width: 500px; margin-left: 200px; margin-top: 60px;">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/project management.png" alt="Los Angeles">
                    </div>

                    <div class="item">
                        <img src="~/Images/project management3.png" alt="Chicago">
                    </div>

                    <div class="item">
                        <img src="~/Images/project management4.png" alt="New York">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>
</section>
