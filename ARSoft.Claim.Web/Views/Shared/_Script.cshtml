<script type="text/javascript">
    //Script Defined Gobal
    $(function () {
        $('table').footable();

        var pageSize = $('#Paging_Number').val();
        $('.footable').data('page-size', pageSize);
        $('.footable').trigger('footable_initialized');

        $('.footable').data('limit-navigation', 4);
        $('.footable').trigger('footable_initialized');

        // $('.table').trigger('footable_expand_all');
        $('.table').trigger('footable_collapse_all');

        $('#Paging_Number').change(function (e) {
            e.preventDefault();
            var pageSize = $(this).val();
            $('.footable').data('page-size', pageSize);
            $('.footable').trigger('footable_initialized');
        });

        @Html.Raw(ViewBag.ModalMessage)

    });

    function CheckRequired() {
        var res = true;
        var statement = "";

        $(".valuerequired").each(function () {
            var temp = $(this).val();
            if (temp == "") {
                statement += "- กรุณาเลือกหรือกรอกข้อมูล " + $(this).attr("title") + "<br/>";
                res = false;
            }
        });

        if (!res) {
            $('#ModalAlertStartment').html(statement);
            $('#ModalAlert').modal('toggle');
        }

        return res;
    }

    function ModalAlertNotification(statement) {
        $('#ModalAlertStartment').html(statement);
        $('#ModalAlert').modal('toggle');
    }

</script>